		crossorigin="anonymous" referrerpolicy="no-referrer"></script>
	<script>
		$(document).on("click", "#signup", function () {

			let newUser = {
				username: $("#username").val(),
				email: $("#email").val(),
				password: $("#password").val(),
			};

			console.log(newUser);

			$.ajax({
				url: "/api/users",
				method: "POST",
				data: newUser
			}).then(function (response) {
				console.log(response);
				window.location = "/";
			})
		})
	</script>

