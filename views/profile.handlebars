<!-- PROFILE PAGE CONTENT TO GO IN THE {{{ body }}} -->
<!-- ///////// Page Tile Row ////////////// -->
<div class="row">
  <div class="col-12 d-flex justify-content-center">
    <h1>My Review Member Profile</h1>
  </div>
</div>

<!-- ///////// START OF Two Column Content ////////////// -->
<div class="row">
  <!-- ///////// START OF First Column ////////////// -->
  <div class="col-sm-12 col-lg-6">
    <!-- ///////// START OF Profile Info ////////////// -->
    <div class="oBox">
      <div class="row">
        <div class="col-12 d-flex justify-content-center">
          <h2>{{username}}</h2>
        </div>
      </div>
      <div class="row">
        <div class="col-12 d-flex justify-content-center">

          <!-- start of Nessted PROFILE info -->
          <div class="row">
            <div class="col-12 d-flex justify-content-center box">
              <div class="row">
                <div class="col-4 d-flex justify-content-center">

                  
                  <img src="{{#if avatar}}{{avatar}}{{else}}../img/avatar.jpg{{/if}}" alt="avatar" style="width:150px;height:150px;" />
                  
                </div>
      </div>
            </div>
          </div>
          <!-- END Nessted PROFILE info -->
        </div>
      </div>
    </div>
    <div class="oBox">

<div class="row d-flex justify-content-center">
        <!-- START OF div column container for the Watch List Section-->
        <!-- define a border for this <div> below -->
        <div class="col-12 d-flex justify-content-center">
          <h2>My Review List<h2>
        </div>
      </div>
      <div class="row">
        <div class="col-12">
          <!-- ///////// Review List Rendered in HERE ////////////// -->
          <section class="box">
            {{#item reviewed}}
            {{/each}}
          </section>
        </div>
      </div>
    </div>
  </div>
  <!-- ///////// END First Column Content ////////////// -->
  
 <!-- ///////// START OF 2nd Column ////////////// -->
  <div class="col-sm-12 col-lg-6">
    <div class="oBox">
      <div class="row d-flex justify-content-center">
        <!-- START OF div column container for the Watch List Section-->
        <!-- define a border for this <div> below -->
        <div class="col-12 d-flex justify-content-center">
          <h2>My Reviews<h2>
        </div>
      </div>
      <div class="row">
        <div class="col-12">
          <!-- ///////// Review List Rendered in HERE ////////////// -->

          <section class="box">
            {{#each}}
            {{>}}
            {{/each}}
          </section>
        </div>
      </div>
    </div>
  </div>
  <!-- ///////// END OF 2nd Column ////////////// -->
</div>
<!-- ///////// END OF Two Column Content ////////////// -->
