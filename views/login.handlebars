    <script>
        $('.login-form').on("submit", function () {
            event.preventDefault();
            let newUser = {
                email: $("#email").val(),
                password: $("#password").val()
            };

            $.ajax({
                url: "/api/users/login",
                method: "POST",
                data: newUser
            }).then(function (response) {
                console.log(response);
                location.href = "/profile"

            })
        })
    </script>

