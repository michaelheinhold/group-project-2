<div class="main content post-card">
    <div class="subject container col-5">
        <form>
            <label for="title">What are you reviewing?</label>
            <input type="text" placeholder="Name" name="title" id="title" class="title" />

            <label for="url">What is the link for a trailer for this film?</label>
            <input type="text" placeholder="Link" name="post_url" id="post_url" class="post_url" />

            <label for="review">What did you think?</label>
            <input type="text" name="review-review" id="review-review" class="review-review" />

            <button type="submit" id="newPost">Submit</button>
        </form>
    </div>
</div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js" integrity="sha512-894YE6QWD5I59HgZOGReFYm4dnWc1Qt5NtvYSaNcOP+u1T9qYdvdihz0PPSiiqn/+/3e7Jo4EaG7TubfWGUrMQ==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
<script>
    $(document).on("click", "#newPost", function () {
        
        let newPost = {
            title: $("#title").val(),
            review: $("#review").val(),
            post_url: $("#post_url").val()
        };

            console.log(newPost);

        $.ajax({
            url: "/api/posts",
            method: "POST",
            data: newPost
        }).then(function(response) {
            console.log(response);
            window.location = "/posts";
        })
    })
</script>

<script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.8.0/gsap.min.js"></script>

<script>
    gsap.from('.post-card', { opacity: .75, duration: 1.25, ease: 'Power2.easeInOut' });
</script>


